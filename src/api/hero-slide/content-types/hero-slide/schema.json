{
  "kind": "collectionType",
  "collectionName": "hero_slides",
  "info": {
    "singularName": "hero-slide",
    "pluralName": "hero-slides",
    "displayName": "HeroSlide"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "imageProduct": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "title": {
      "type": "string",
      "default": "Producto",
      "required": true
    },
    "subtitle": {
      "type": "string",
      "maxLength": 55,
      "required": true
    },
    "description": {
      "type": "string",
      "maxLength": 100,
      "required": true
    },
    "order": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 5
    },
    "active": {
      "type": "boolean",
      "required": true,
      "default": false
    }
  }
}
